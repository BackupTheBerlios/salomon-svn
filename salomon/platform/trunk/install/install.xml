<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
Installation file for salomon project

    To compile it :
    - go in the bin directory where you installed IzPack
    - call "compile ../sample/install.xml -b ../sample"

    /Program\ Files/IzPack/bin/compile /home/krzychu/dv/ks/install/install.xml -b /home/krzychu/dv/ks/install/

-->

<installation version="1.0">
    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>Salomon</appname>
        <appversion>1.0b</appversion>
        <authors>
            <author name="Krzysztof Rajda" email="krzycho@student.uci.agh.edu.pl"/>
            <author name="Nikodem Jura" email="nikodem.jura@gmail.com"/>
        </authors>
        <javaversion>1.5</javaversion>
	<url>http://developer.berlios.de/projects/salomon</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no"/>
    
    <!-- 
        The locale section.
        Asks here to include the English and French langpacks.
    -->
    <locale>
        <langpack iso3="eng"/>
	<!--        <langpack iso3="pol"/> -->
    </locale>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The base files</description>
	    <!-- instalations files-->
            <file src="Readme.txt" targetdir="$INSTALL_PATH"/>
	    <file src="Licence.txt" targetdir="$INSTALL_PATH"/>
    
        <!-- DTD -->
	    <file src="../config/struct.dtd" targetdir="$INSTALL_PATH/config" defaultexcludes="yes"/>
	    
	    <!-- data base -->
	    <file src="../db/salomon.gdb" targetdir="$INSTALL_PATH/db"/>
	    
	    <!-- external lib jars -->
	    <file src="../lib/binding.jar" targetdir="$INSTALL_PATH/lib"/>
		<file src="../lib/colt.jar" targetdir="$INSTALL_PATH/lib"/>
		<file src="../lib/commons-cli.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/commons-collections-3.1.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/dynamicjava.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/firebirdsql.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/forms.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/jedit.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/jung.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/log4j-1.2.8.jar" targetdir="$INSTALL_PATH/lib"/>
        <file src="../lib/looks.jar" targetdir="$INSTALL_PATH/lib"/>
	<file src="../lib/mini-j2ee.jar" targetdir="$INSTALL_PATH/lib"/>
	<file src="../lib/tablesorter.jar" targetdir="$INSTALL_PATH/lib"/>
	<file src="../lib/validation.jar" targetdir="$INSTALL_PATH/lib"/>
	<file src="../lib/weka.jar" targetdir="$INSTALL_PATH/lib"/>
	    
	<file src="../salomon.jar" targetdir="$INSTALL_PATH"/>
	    
	<!-- native libraries-->
	<file src="../fbembed.dll" targetdir="$INSTALL_PATH"/>
	<file src="../jaybird.dll" targetdir="$INSTALL_PATH"/>
	    
	<!-- configurations -->
	<file src="../bin/messages.properties" targetdir="$INSTALL_PATH"/>
	<file src="../src/version.properties" targetdir="$INSTALL_PATH"/>
	<file src="../bin/config.properties" targetdir="$INSTALL_PATH"/>
	<file src="../bin/resources.properties" targetdir="$INSTALL_PATH"/>
        <file src="../bin/log.conf" targetdir="$INSTALL_PATH"/>
        <file src="../bin/all.policy" targetdir="$INSTALL_PATH"/>
        <file src="../install/run.bat" targetdir="$INSTALL_PATH"/>
	    
	    <!-- resources -->
	    <fileset dir="../res" targetdir="$INSTALL_PATH/res" defaultexcludes="yes"/>
    <!--            <parsable targetfile="$INSTALL_PATH/script.bat"/> The file will be parsed -->
        </pack>
       
	<!-- <pack name="JRE" required="no">
		<description>Java Runtime Environment</description>
		<fileset dir="../jre" targetdir="$INSTALL_PATH/jre" defaultexcludes="yes"/>
	</pack>     -->  

	<!--
        <pack name="Docs" required="no">
            <description>The documentation</description>
	    <file src="../docs/documentation/salomon.pdf" targetdir="$INSTALL_PATH/docs"/>
    </pack> -->
    <pack name="Plugins" required="no">
	<description>The sample plugins</description>
	<file src="../plugins/AttributeSetCreator.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/DataSetCreator.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/DataSetUnion.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/DataSetVis.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/PluginDebugger.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/RandomDSCreator.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/TreeEvaluator.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/TreeVis.jar" targetdir="$INSTALL_PATH/plugins"/>
	<file src="../plugins/WekaTreeGenerator.jar" targetdir="$INSTALL_PATH/plugins"/>
    </pack>

    	<pack name="Sources" required="no">
	    <description>The sources</description>
	    <fileset dir="../src" targetdir="$INSTALL_PATH/src" defaultexcludes="yes"/>
    	</pack>
	<pack name="SampleDatabase" required="no">
	    <description>The sources</description>
	    <file src="../db/example.gdb" targetdir="$INSTALL_PATH/db"/>
	</pack>
</packs>
    
</installation>
