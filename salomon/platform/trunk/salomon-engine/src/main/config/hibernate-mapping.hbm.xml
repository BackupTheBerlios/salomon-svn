<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="salomon.engine.task.Task" table="TASKS">
        <id name="taskId" column="TASK_ID">
			<generator class="native"/>
        </id>
        <property name="taskNr" column="TASK_NR"/>     	
        <property name="taskName" column="TASK_NAME"/>
    </class>

    <class name="salomon.engine.agent.AgentProcessingComponent" table="PROCESSING_COMPONENTS">
        <id name="componentId" column="COMPONENT_ID">
			<generator class="native"/>
        </id>
        <!--  many-to-one name="tasks" class="salomon.engine.task.Task" column="TASK_ID"/-->
        <array name="tasks" table="TASKS" cascade="save-update"
        	inverse="true">
        	<key column="component_id" />
        	<list-index column="task_Nr" />
        	<one-to-many class="salomon.engine.task.Task" />
        </array>
        
        <property name="componentName" column="COMPONENT_NAME"/>
    </class>

    <class name="salomon.engine.agent.AgentDecisionComponent" table="DECISION_COMPONENTS">
        <id name="componentId" column="COMPONENT_ID">
			<generator class="native"/>
        </id>        
        <property name="componentName" column="COMPONENT_NAME"/>
    </class>

</hibernate-mapping>

